<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="body">
        <item name="android:textSize">@dimen/body_size</item>
        <item name="android:fontFamily">@font/jellee</item>
    </style>

    <style name="caption">
        <item name="android:textSize">@dimen/body_size</item>
        <item name="android:textColor">@color/captionColor</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/jellee</item>
    </style>

    <style name="hint">
        <item name="android:textSize">@dimen/hint_size</item>
        <item name="android:textColor">@color/captionColor</item>
        <item name="android:fontFamily">@font/jellee</item>
    </style>

    <style name="icon">
        <item name="android:padding">@dimen/icon_padding</item>
    </style>

    <style name="main_text" parent="body">
        <item name="android:textSize">@dimen/body_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="code">
        <item name="android:textSize">@dimen/code_size</item>
        <item name="android:fontFamily">@font/jellee</item>
        <item name="android:capitalize">characters</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
